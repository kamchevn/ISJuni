@model Domain.Domain_Models.DTO.HealthExamsForPolyclinic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Polyclinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Polyclinic.PolyclinicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Polyclinic.PolyclinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Polyclinic.PolyclinicAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Polyclinic.PolyclinicAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Polyclinic.Reputation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Polyclinic.Reputation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Polyclinic.AvailableSlots)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Polyclinic.AvailableSlots)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Polyclinic.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Date Taken
            </th>
            <th>
                Description
            </th>
            <th>
                Patient FullName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HealthExaminations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTaken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
            </tr>
        }
    </tbody>
</table>