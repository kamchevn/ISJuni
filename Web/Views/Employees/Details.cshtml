@model Domain.Domain_Models.DTO.HealthExamsForEmployee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Company)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Company.CompanyName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Employee.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-action="ExamForm" asp-route-id="@Model?.Employee.Id">Exam employee</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Date Taken
            </th>
            <th>
                Description
            </th>
            <th>
                Polyclinic Name
            </th>
            <th>
                Polyclinic Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HealthExaminations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTaken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Polyclinic.PolyclinicName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Polyclinic.PolyclinicAddress)
                </td>
            </tr>
        }
    </tbody>
</table>
